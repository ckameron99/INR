{
  "name": "cifar",
  "dataset": "CIFAR10",
  "dataset_directory": "../IIB-project/recombiner-bones/trainset/",

  "train_size": 2048,
  "test_size": 100,

  "seed": 63759,

  "device": "cuda",

  "dim_in": 2,
  "dim_fourier": 32,
  "dim_hidden": 16,
  "dim_out": 3,
  "num_layers": 4,

  "lr": 2e-4,
  "kl_beta": 5e-6,
  "log_std_init": -10,
  "init_std_scale": 0.25,

  "kl2_budget": 16,
  "kl2_buffer": 0.2,
  "max_group_size": 25,

  "n_em_iters": 128,
  "n_epochs": 100,
  "comp_epochs": 25000,
  "num_tune": 100,

  "beta_adjust_interval": 15,
  "beta_adjust_multiplier": 1.05
}
